import { getAsObject } from "@parameter1/base-cms-object-path";
import defaultValue from "@parameter1/base-cms-marko-core/utils/default-value";

$ const { nativeX: nxConfig } = out.global;
$ const nativeX = getAsObject(input, "nativeX");
$ const image = getAsObject(input, "node.image");

<shared-native-x-inject|{ nodes: injected }| nodes=input.nodes ...nativeX config=nxConfig>
  <default-theme-card-deck-flow
    tag=input.tag
    class=input.class
    modifiers=input.modifiers
    attrs=input.attrs
    cols=defaultValue(input.cols, 2)
    nodes=injected
  >
    <@slot|{ node, index }|>
      <shared-content-card-node
        ...input.node
        node=node
        attrs=getAsObject(node, "attributes.container")
        link-attrs=getAsObject(node, "attributes.link")
      />
    </@slot>
  </default-theme-card-deck-flow>
</shared-native-x-inject>
