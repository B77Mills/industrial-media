<default-theme-hero-flow nodes=input.nodes>
  <@hero|{ node }|>
    <shared-content-card-node ...input.card node=node with-dates=false>
      <@image width=630 />
      <@title modifiers=["large"] />
    </shared-content-card-node>
  </@hero>
  <@list|{ nodes }|>
    <shared-content-list-flow ...input.list nodes=nodes inner-justified=false>
      <@node>
        <@title modifiers=["small"] />
      </@node>
    </shared-content-list-flow>
  </@list>
</default-theme-hero-flow>
